{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "version": {
      "allowBranch": "master",
      "message": "chore: Publish :shipit: [skip ci]"
    },
    "publish": {
      "conventionalCommits": true,
      "ignoreChanges": [
        "package-lock.json",
        "Readme.md",
        "Changelog.md",
        "CHANGELOG.md",
        "*.spec.js",
        "*.snap"
      ]
    }
  }
}
